{
  "name": "sums",
  "version": "0.1.0",
  "description": "a file checksum generator",
  "author": "Zab",
  "license": "MIT",
  "homepage": "https://github.com/zab/sums#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zab/sums.git"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "checksum",
    "shasum",
    "hash",
    "sha1",
    "snapshot",
    "filesize"
  ],
  "files": [
    "lib/",
    "license",
    "readme.md"
  ],
  "bin": {
    "sums": "bin/sums"
  },
  "main": "lib/index.js",
  "scripts": {
    "test:lint": "standard --verbose | snazzy",
    "test:unit": "mocha src/**/*.test.js -r babel-register -r babel-polyfill",
    "test": "npm-run-all test:*",
    "build": "rm -rf lib && babel src -d lib --no-comments --compact",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "crypto-extra": "0.4.0",
    "is-stream": "1.1.0",
    "mime": "1.3.4"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "3.5.0",
    "mocha": "3.1.2",
    "mock-fs": "3.11.0",
    "npm-run-all": "3.1.1",
    "snazzy": "5.0.0",
    "standard": "8.4.0"
  },
  "standard": {
    "globals": [
      "beforeEach",
      "describe",
      "it"
    ]
  },
  "babel": {
    "presets": [
      "latest"
    ]
  }
}
